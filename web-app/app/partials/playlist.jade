.details
  h1
    span {{playlist.title}}
  h2 {{playlist.track_count}} Tracks
.collection
  table
    tr
      th Track Name
      th Artist
      th Length
    tr(ng-repeat="track in activeTrackList", ng-click="playFromIndex($index)")
      td {{track.title}}
      td {{track.user.username}}
      td {{Math.floor(track.duration / 1000 / 60)}}:{{Math.floor((track.duration / 1000) % 60)}}
