doctype html
html(lang='en', ng-app='app')
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
    meta(name='viewport', content='width=device-width', initial-scale='1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    title(ng-bind-template='{{pageTitle}}')
    link(rel='stylesheet', href='/css/app.css')
    //-script(src='http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js')
    //if lte IE 7
      script(src='http://cdnjs.cloudflare.com/ajax/libs/json2/20110223/json2.js')
    //if lte IE 8
      script(src='//html5shiv.googlecode.com/svn/trunk/html5.js')
    script.
      window.brunch = window.brunch || {};
      window.brunch['auto-reload'] = {
        enabled: true
      };
    script(src="//connect.soundcloud.com/sdk.js")
    script(src='/js/vendor.js')
    script(src='/js/partials.js')
    script(src='/js/app.js')
  body(ng-controller='AppCtrl')
    #top-bar
      .top-bar-left
        span Sound Cloud Player

      .top-bar-right
        img.profile-pic(ng-src="{{me.avatar_url}}", ng-if="authenticated")
        span.top-bar-text(ng-if="authenticated"): a(ng-href="{{me.permalink_url}}") {{me.username}}
        button.btn.btn-default(ng-if="!authenticated", ng-click="login()") Login

    #content-pane
      #side-pane
        ul
          li
            span
              a(ng-href="#/favorites") Favourites
            span {{me.public_favorites_count}}
          li
            span Following
            span {{me.followings_count}}

        ul(ng-if="me.playlists")
          li.header Playlists
          li(ng-repeat="playlist in me.playlists")
            a(ng-href="#/playlist/{{playlist.id}}") {{playlist.title}}

      #view-pane(ng-view)

    #play-bar
      .panel-left
        button.btn.btn-default(ng-click="playActiveTrack()") Play

      .panel-centre
        progress.play-progress

      .panel-right
        span Vol

